<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- ðŸ¦‡ NIGHTWING SECTION -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#1A237E"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top row: Image + Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/nightwingImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/nightwing"
                    android:contentDescription="Nightwing (Dick Grayson)"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nightwing (Dick Grayson)"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nightwing_bio"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸš€ New Navigation Button -->
            <Button
                android:id="@+id/btnGoToB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Fragment B"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ‘½ MISS MARTIAN SECTION -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#4A148C"
        app:cardCornerRadius="12dp">

        <!-- You can reuse the same layout structure -->
        <!-- Omitted here for brevity -->
    </androidx.cardview.widget.CardView>
</LinearLayout>
